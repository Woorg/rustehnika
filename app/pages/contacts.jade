extends /blocks/layout-default/layout-contacts

include /blocks/header/header
include /blocks/breadcrumbs/breadcrumbs

include /blocks/side/side
include /blocks/cat-nav/cat-nav
include /blocks/form/form

include /blocks/side-rel/side-rel

include /blocks/contacts/contacts
include /blocks/footer/footer


block head
	- var pageTitle = 'Рустехника76 - Контакты';

block content
	+header()
	main.main
		+breadcrumbs-contacts()
		.main__w
			h1.main__title Контакты
			.main__content.main__content_sub
				.main__cat-nav
					+cat-nav()
				.main__row
					.main__left
						+side()
							+side-rel-deliv()
					.main__right
						+contacts()
				.main__form
					+form-second()
	+footer()
