extends /blocks/layout-default/layout-default

include /blocks/header/header
include /blocks/breadcrumbs/breadcrumbs
include /blocks/cat-nav/cat-nav
include /blocks/cat-desc/cat-desc

include /blocks/catalog/catalog
include /blocks/side/side
include /blocks/side-nav/side-nav
include /blocks/side-rel/side-rel

include /blocks/pagination/pagination
include /blocks/form/form
include /blocks/footer/footer


block head
	- var pageTitle = 'Рустехника76 - подкатегория';

block content
	+header()
	main.main
		+breadcrumbs-subcategory()
		.main__w
			h1.main__title снегоходы «буран»
			.main__content.main__content_sub
				.main__cat-nav
					+cat-nav()
				.main__row
					.main__side-nav.main__side-nav_tablet
						+side-nav-second()
					.main__left
						+side()
							+side-nav()
							+side-rel()
					.main__right
						.main__cat-desc
							+cat-desc()
						.main__catalog
							+catalog-sub()
							.main__pagination
								+pagination()
					
				.main__form
					+form-third()
	+footer()
