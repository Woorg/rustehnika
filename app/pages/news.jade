extends /blocks/layout-default/layout-delivery

include /blocks/header/header
include /blocks/breadcrumbs/breadcrumbs

include /blocks/side/side
include /blocks/cat-nav/cat-nav
include /blocks/side-rel/side-rel
include /blocks/news/news
include /blocks/pagination/pagination


include /blocks/footer/footer


block head
	- var pageTitle = 'Рустехника76 - новости';

block content
	+header()
	main.main
		+breadcrumbs-news()
		.main__w
			h1.main__title новости
			.main__content.main__content_sub
				.main__cat-nav
					+cat-nav()
				.main__row
					.main__left
						+side()
							+side-rel-deliv()
					.main__right
						+news()
						.main__pagination
							+pagination()
	+footer()
