.relative
	display block
	&__title
		margin-bottom 15px
	&__list
		margin-right -33px
		font-size 0
		+r($t)
			margin-right -33px
			margin-left 0
		+r($m)
			margin-right -33px
			// margin-left -17px
	&__item
		margin-right 26px
		margin-bottom 20px
		padding-top 24px
		padding-left 20px
		padding-right 20px
		padding-bottom 24px
		display inline-block
		vertical-align top
		width 215px
		min-height 442px
		background-color #f5f6fa
		font-size 14px
		color #2e3e57
		+r($m)
			margin-right 20px
			width 215px
			min-height 375px
		&:nth-child(3n-1)
			padding-left 20px
			padding-right 20px
			width 215px
			+r($t)
				margin-left 0
				margin-right 0
				padding-left 20px
				padding-right 20px
				width 222px
			+r($m)
				margin-left 0
				margin-right 0
				padding-left 20px
				padding-right 20px
				width 215px
		&:nth-child(2n-1)
			// padding-left 60px
			// padding-right 60px
			padding-left 40px
			padding-right 40px
			width 294px
			+r($t)
				padding-left 30px
				padding-right 30px
			+r($m)
				padding-left 20px
				padding-right 20px
				width 215px
	&__item-left
		+r($m)
			float none
			width auto

	&__item-right
		+r($m)
			float none
			width auto
	&__image
		margin auto
		margin-bottom 30px
		width 175px
		height 140px
		img
			max-width 100%
			height auto
	&__item-title
		margin-bottom 30px
		font-family $rB
		color #008bff
		text-transform uppercase
		+r($m)
			margin-bottom 20px
	&__item-text
		margin-bottom 20px
		+r($m)
			margin-bottom 16px
	&__specs-link
		position relative
		display inline-block
		vertical-align top
		margin-bottom 15px
		color #2e3e57
		text-decoration none
		&:after
			position absolute
			top 100%
			left 0
			right 0
			width 100%
			content ""
			background transparent
			border-bottom 1px dashed #2e3e57
		&:hover
			&:after
				display none
		+r($m)
			margin-bottom 10px
	&__specs-list
		display none
		margin-bottom 22px
	&__specs-list_active
		display block
	&__specs-item
		margin-bottom 5px
	&__price
		margin-bottom 7px
		font-weight bold
		color #ff5361
	// &__bottom
	&__cart
		display inline-block
		vertical-align top
		color #2e3e57
		text-decoration none
	&__cart-icon
		margin-top -8px
		margin-left 12px
		display inline-block
		vertical-align middle
		width 26px
		height 22px
		line-height 22px
		fill #ffb900
