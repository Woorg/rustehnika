.contacts
	display block
	&__top
		margin-bottom 26px
	&__address,
	&__phones
		display inline-block
		vertical-align top
		font-size 16px
	&__address
		position relative
		margin-right 65px
		padding-left 20px
		width 212px
		font-family $rR
		font-size 16px
		&:after
			position absolute
			top 1px
			left 0
			retinaSprite($location_group)
			content ""
	&__phones
		position relative
		padding-left 35px
		text-decoration none
		color #2e3e57
		text-transform uppercase
	&__phones-icon
		position absolute
		top 0
		left 0
		margin-right 10px
		display inline-block
		vertical-align bottom
		width 20px
		height 20px
		fill #a1abba
	&__phone
		display block
		color #2e3e57
		text-decoration none
		&:hover
			text-decoration underline
	&__list
		margin-bottom 60px
		+r($m)
			margin-bottom 30px
	&__item
		position relative
		z-index 1
		margin-bottom 8px
		padding-top 14px
		padding-left 36px
		padding-bottom 15px
		display inline-block
		vertical-align top
		&:after
			position absolute
			z-index -1
			top 0
			left 0
			bottom 0
			width 70px
			height 100%
			content ''
	&__item_first
		width 100%
		&:after
			background-color #e0ecff
	&__item_second
		width 328px
		+r($t)
			width 274px
		+r($m)
			width 49.5%
		&:after
			background-color #e6eaf2
	&__item_third
		width 202px
		+r($t)
			width 188px
		+r($m)
			width 49.5%
		&:after
			background-color #f5f6fa
	&__title
		margin-bottom 25px
		text-transform uppercase
	&__email
		display block
		color #2e3e57
		text-decoration none
		&:hover
			text-decoration underline
	&__map
		width 565px
		height 206px
		filter grayscale(100%)
		background #cbcbcb
		+r($t)
			display none
		+r($m)
			display block
			width 450px
			height 188px
