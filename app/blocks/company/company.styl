.company
	display block
	padding-top 0
	overflow hidden
	&__in
		padding-bottom 78px
		@extends .in
		+r($m)
			padding-bottom 30px
	&__item
		position relative
		padding-top 60px
		padding-left 15px
		clr()
		+r($m)
			padding-top 20px
			padding-left 0
	&__item-num
		position absolute
		top 70px
		left 17px
		font-family $bI
		font-size 72px
		line-height 1
		color #cbcfd5
		+r($m)
			font-size 36px
	&__ellipse
		position absolute
		top 84px
		left 80px
		width 214px
		height 215px
		background #f5f6fa
		border-radius 50%
		z-index -1
		+r($t)
			width 189px
			height 189px
		+r($m)
			width 134px
			height 134px
	&__image
		img
			max-width 100%
			height auto
	&__content
		p
			position relative
			display inline-block
			vertical-align baseline
			font-size 16px
			+r($m)
				font-size 12px
			&:first-letter
				display inline-block
				vertical-align baseline
				font-family $bI
				font-size 48px
				line-height 18px
				color #2e3e57
				+r($m)
					font-size 24px

	&__note
		position relative
		margin-top -31px
		margin-right 30px
		padding-bottom 34px
		float right
		width 342px
		font-size 16px
		line-height 1.3
		+r($m)
			margin-top 0
			margin-right 0
			padding-bottom 20px
			width 250px
			font-size 12px
		a
			color #008bff
			text-decoration none
		&:after
			position absolute
			bottom -16px
			left -83px
			width 165px
			height 2px
			background #C1D9FF
			content ""
			+r($m)
				bottom 0
				left 0
				width 130px

	&__w
		padding-top 60px
		clr()
		+r($m)
			padding-top 40px
	&__item_first
		min-height 410px
		+r($m)
			min-height 100px
		&:before
			position absolute
			z-index -1
			top 0
			right 184px
			margin-right -680px
			width 705px
			height 363px
			background #e0ecff
			content ""
			+r($m)
				display none
		.company__image
			position relative
			margin-top 40px
			margin-left -68px
			float left
			width 315px
			height 209px
			+r($m)
				margin-left -50px
				margin-right 20px
				width 201px
				height 133px
			&:after
				position absolute
				left 140px
				bottom -70px
				width 53px
				height 1px
				background-color #2e3e57
				content ""
				+r($m)
					left 60px

		.company__content
			position relative
			margin-top 28px
			margin-left -20px
			float left
			width 405px
			font-size 16px
			line-height 1.2
			+r($t)
				width 385px
				margin-right 100px
			+r($m)
				margin-top 40px
				margin-right 0
				width 287px
			&:after
				position absolute
				top -88px
				left 245px
				width 1px
				height 53px
				background #2e3e57
				content ""
				+r($m)
					top auto
					bottom -65px
					left 0
					height 30px

	&__item_second
		.company__item-num
			top 56px
			+r($m)
				left 0

		.company__image
			position relative
			margin-top -17px
			margin-right 0
			float right
			width 271px
			height 215px
			+r($t)
				width 200px
				height 158px
			+r($m)
				width 132px
				height 105px
			&:after
				position absolute
				bottom -103px
				left 60px
				width 1px
				height 53px
				background-color #2e3e57
				content ""
				+r($m)
					height 37px
					left 0
		.company__content
			margin-top 23px
			margin-left 121px
			float left
			width 386px
			font-size 16px
			line-height 1.2
			+r($t)
				width 320px
			+r($m)
				margin-top 0
				margin-left 0
		.company__ellipse
			position absolute
			top 80px
			right 158px
			left auto
			+r($m)
				top 40px
				right 74px
	&__item_third
		position relative
		+r($m)
			padding-top 60px
		&:before
			position absolute
			z-index -1
			top -66px
			left 118px
			margin-left -610px
			width 610px
			height 313px
			background #e0ecff
			content ""
			+r($t)
				top 84px
				height 225px
			+r($m)
				display none
		.company__item-num
			top 128px
			left 430px
			+r($t)
				left 230px
			+r($m)
				top 30px
				left 160px
		.company__image
			margin-top -35px
			margin-left -50px
			float left
			width 298px
			height 222px
			+r($t)
				width 253px
				height 191px
			+r($m)
				width 128px
				height 96px
				margin-left 0
		.company__content
			margin-top 90px
			margin-right 0
			float right
			width 386px
			+r($t)
				margin-right 100px
				width 295px
			+r($m)
				margin-top 0
				margin-right 0
				width 224px
