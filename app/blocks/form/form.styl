.form_style-second
	width 100%
	float none
	+r($m)
		width auto

	.form__title
		text-align left
		padding-left 0
	.form__left
		float left
		width 280px
		+r($t)
			width 247px
		+r($m)
			float none
			width auto
	.form__right
		float right
		width 400px
		min-height 211px
		clr()
		+r($t)
			width 340px
		+r($m)
			float none
			width auto
	.form__privacy
		position relative
		top 60px
		clear left
		+r($m)
			position absolute
			top auto
			left 0
			bottom 25px
			clear none
			width 190px
			font-size 12px
	.form__area
		position relative
	.form__submit
		position absolute
		bottom 30px
		left 0
		display inline-block
		width 280px
		+r($t)
			width 247px
		+r($m)
			position static
			padding-left 0
			padding-right 0
			width 130px
			float right
			font-size 18px
