.hero
	// margin-top 158px
	position relative
	padding-bottom 40px
	display block
	overflow hidden
	background transparent
	&:after
		position absolute
		top 158px
		width 100%
		height 438px
		background url('../images/general/pattern.png') 0 0 repeat, radial-gradient(circle at 0 0, #fbfdff, #eff1f4)
		content ""
		z-index -1
		+r($t)
			height 332px
	&__in
		@extends .in

	&__slider
		position relative
		margin-bottom 56px


.slider
	// padding-right 15px
	&__list
		height 407px
	&__item
		margin 0
		background-color #e6eaf2
		box-shadow 0 0 30px 1px #e3e3e3
	&__link
		display table
		width 100%
		height 407px
		color #021634
		text-decoration none
		table-layout fixed
		clr()
	&__content,
	&__image
		display table-cell
		vertical-align middle
		text-align center
	&__content
		padding-top 30px
		padding-left 66px
		padding-right 66px
		width 486px
		height 407px
		+r($t)
			width 389px
			padding-left 40px
			padding-right 40px
	&__title
		position relative
		margin-bottom 14px
		padding-bottom 24px
		font-size 36px
		font-weight normal
		line-height 1.2
		+r($t)
			font-size 24px
		&:after
			position absolute
			left 50%
			margin-left -38px
			bottom 0
			width 76px
			height 2px
			background #9fa6af
			content ""
	&__text
		margin-bottom 30px
		font-size 18px

	&__button
		@extends .button
	&__image
		width 457px
		height 407px
		background radial-gradient(circle 457px at center, #ffffff 0%, #f5f6fb 100%)
		+r($t)
			width 368px
		img
			margin auto
			display block
			max-width 100%
			height auto

	&__dots
		position absolute
		top 0
		left -18px
		width 15px
		height 100%
		+r($t)
			left 10px

	.slick-dots
		top 50%
		bottom auto
		transform translateY(-50%)
		// height 100%
		font-size 0
		li
			margin-top 22px
			width 16px
			height 16px
			display inline-block
			&:first-child
				margin-top 0
			button
				padding 0
				width 8px
				height 8px
				background #bec7d3
				border-radius 50%
		.slick-active
			button
				background #ff5361
