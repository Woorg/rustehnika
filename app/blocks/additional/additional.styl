.additional
	width 616px
	float left
	// &__list

	&__item
		position relative
		margin-top 30px
		padding-top 30px
		padding-bottom 35px
		background #e6eaf2
		clr()
		&:first-child
			margin-top 0
	&__image
		img
			max-width 100%
			height auto
	&__content
		width 228px
	&__title
		position relative
		margin-bottom 18px
		padding-bottom 17px
		display block
		font-family $rR
		font-size 24px
		color #2e3e57
		text-decoration none
		&:after
			position absolute
			bottom 0
			left 0
			width 53px
			height 2px
			background #b6b6b6
			content ""
	&__text
		line-height 1.3

	&__item_first
		.additional__content
			float left
		.additional__image
			margin-top -18px
			margin-left -72px
			margin-right 20px
			float left
			width 298px
			height 187px
	&__item_second
		padding-top 20px
		padding-left 80px
		padding-bottom 23px
		background transparent
		&:before
			position absolute
			top 0
			left 0
			bottom 0
			width 134px
			background #e6eaf2 0 0 no-repeat
			content ""
			z-index -1
		.additional__content
			float left
		.additional__image
			margin-top 30px
			float right
			width 285px
			height 245px
