.main
	@extends .in
	padding-bottom 50px
	overflow hidden
	clr()
.main__w
	position relative
	padding-top 60px
	&:after
		position absolute
		z-index -1
		top 0
		left 0
		right 0
		width 100%
		height 166px
		background-color #e6eaf2
		content ''
	+r($m)
		padding-top 10px
.main__title
	margin-bottom 26px
	color #2e3e57
	font-weight bold
	text-align center
	text-transform uppercase
	+r($m)
		margin-bottom 8px

.main__catalog
	margin auto
	width 780px
	+r($t)
		width 660px
	+r($m)
		width 450px

.main__pagination
	margin-bottom 20px

.main__form
	margin-left -30px
	margin-right -30px
	+r($m)
		margin-right 0
		margin-left 0
