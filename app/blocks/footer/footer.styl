.footer
	display block
	background url('../images/general/pattern.png') 0 0 repeat, radial-gradient(circle at 0 0, #fbfdff, #eff1f4)
	&__in
		position relative
		@extends .in
		padding-top 68px
		padding-right 140px
		padding-bottom 100px
		padding-left 96px
		font-size 0
		clr()
		+r($t)
			padding-left 30px
			padding-right 30px
		+r($m)
			padding-top 30px
			padding-bottom 30px
	&__nav,
	&__address,
	&__callback
		margin-right 30px
		display inline-block
		vertical-align top
		font-family $rR
		font-size 16px
	&__nav
		width 233px
	&__address
		position relative
		width 212px
		&:after
			position absolute
			top 1px
			left -20px
			retinaSprite($location_group)
			content ""
		+r($m)
			position absolute
			top 30px
			right 30px
			margin-right 0
			width 168px
			font-size 14px
	&__callback
		margin-top -7px
		margin-right 0
		float right
		width 162px
		+r($m)
			margin-top -40px
			margin-right 30px
	&__callback-button
		@extends .button
		padding-top 4px
		padding-bottom 7px
		padding-left 14px
		padding-right 10px
		font-size 16px
		border-radius 10px
	.footer__phone
		margin-bottom 13px
		font-family $a
		font-size 18px
		+r($m)
			font-size 14px
