.cat-desc
	display block
	&__title
		margin-bottom 30px
		font-size 16px
		color #ff5361
		text-transform uppercase
	&__text
		position relative
		color #383838
		@extends .wysiwyg
		max-height 532px
		overflow hidden
		&:after
			position absolute
			left 0
			bottom 0
			width 100%
			height 35px
			content ''
			background rgb(255,255,255)
			background linear-gradient(to bottom, rgba(255,255,255,.5) 0%,rgba(255,255,255,.7) 35%,rgba(255,255,255,1) 100%)
