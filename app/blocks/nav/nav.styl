.nav
	position relative
	margin-left -24px
	text-align right
	+r($t)
		margin-left 0
	&__list
		font-size 0
	&__item
		margin-left 19px
		display inline-block
		vertical-align top
		&:first-child
			margin-left 0
			+r($t)
				position absolute
				top -33px
				left 0
	&__link
		color #2e3e57
		text-decoration none
		font-size 14px
		+r($t)
			font-size 12px
.nav_vert
	margin-left 0
	text-align left
	.nav__item
		margin-left 0
		display block
		font-family $rR
	.nav__link
		font-size 16px
		line-height 1.2



