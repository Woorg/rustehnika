.nav
	position relative
	display block
	margin-left -24px
	text-align right
	+r($t)
		margin-left 0
	// +r($m)
	// 	margin-left 0
	// 	display block
	// 	width 100%
	// 	clear both
	&__list
		font-size 0
	&__item
		margin-left 19px
		display inline-block
		vertical-align top
		&:first-child
			margin-left 0
			+r($t)
				position absolute
				top -33px
				left 0
			+r($m)
				position static
		+r($d)
			margin-left 6px

	&__link
		color #2e3e57
		text-decoration none
		font-size 14px
		&:hover
			text-decoration underline
		+r($t)
			font-size 12px

.nav_hidden
	display none
	+r($m)
		display none
.nav_hidden-m
	+r($m)
		display none
.nav_vis-m
	+r($m)
		margin-top 30px
		padding-top 6px
		padding-bottom 6px
		display block
		background #F5F6FA
		.nav__list
			justify()
.nav_vert
	margin-left 0
	display inline-block
	text-align left
	.nav__item
		margin-left 0
		display block
		font-family $rR
		&:first-child
			margin-left 0
			+r($t)
				position static
				top -33px
				left 0
		+r($m)
			margin-bottom 15px
	.nav__link
		font-size 16px
		line-height 1.2
		+r($m)
			font-size 14px


