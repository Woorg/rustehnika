html,
body
	height 100%

.in
	margin auto
	width 100%
	max-width 970px
	min-width 480px
	padding-left 15px
	padding-right 15px
	+r($d)
		width 100%
		max-width 970px
		min-width 970px
	+r($t)
		width 100%
		// max-width 759px
		max-width 780px
		// min-width 759px
		min-width 780px
		padding-left 9px
		padding-right 9px
	+r($m)
		width 100%
		max-width 469px
		min-width 469px
.page
	min-width 469px
	font-family $a
	font-weight normal
	font-size 14px
	line-height 1.4
	color $text
	clr()
	+r($d)
		width 100%
		max-width 970px
		min-width 970px
	+r($t)
		width 100%
		// max-width 759px
		max-width 780px
		// min-width 759px
		min-width 780px
	+r($m)
		width 100%
		max-width 469px
		min-width 469px

.page__bottom
	@extends .in
	padding-top 30px
	padding-bottom 70px
	clr()
	+r($t)
		padding-top 0
	+r($m)
		padding-bottom 0
		display flex
		flex-direction column-reverse


.button
	border none
	padding 9px 30px 9px
	display inline-block
	vertical-align top
	text-align center
	line-height 1
	color #fff
	background #ff5361
	font-size 18px
	font-weight normal
	border-radius 20px
	text-decoration none
	tr(background .3s ease)
	&:hover,
	&:focus
		background darken(#ff5361 , 10)
		color #fff

.button-big
	border none
	padding 9px 60px 9px
	display inline-block
	vertical-align top
	text-align center
	line-height 1
	color #fff
	background #ff5361
	font-size 18px
	font-weight normal
	border-radius 10px
	text-decoration none
	tr(background .3s ease)
	&:hover,
	&:focus
		background darken(#ff5361 , 10)
		color #fff

.button-arrow
	position relative
	z-index 1
	@extends .button
	font-family $rR
	font-size 14px
	border-radius 10px
	background-color #ffb900
	// text-decoration none
	// text-transform uppercase
	+r($m)
		padding 5px 8px 5px
	&:after
		position absolute
		bottom -5px
		left 50%
		width 0
		height 0
		border-style solid
		border-width 8px 6.5px 0 6.5px
		border-color #ffbb00 transparent transparent transparent
		transform translateX(-50%)
		content ""
	&:hover,
	&:focus
		background #ffb900

// titles

.title
	padding-left 5px
	font-size 31px
	line-height 1.2
	color #4d4d4d



